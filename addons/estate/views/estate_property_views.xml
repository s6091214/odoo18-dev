<odoo>
    <record id="estate_property_views_list" model="ir.ui.view">
        <field name="name">estate_property_views_list</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="房屋名稱" width="calc(100%/6)" />
                <field name="bedrooms" string="臥室數" width="calc(100%/6)" />
                <field name="living_area" string="坪數" width="calc(100%/6)" />
                <field name="expected_price" string="預期價格" width="calc(100%/6)" />
                <field name="selling_price" string="成交價格" width="calc(100%/6)" />
                <field name="date_availability" string="可用日期" width="calc(100%/6)" />
            </list>
        </field>
    </record>

    <record id="estate_property_views_form" model="ir.ui.view">
        <field name="name">estate_property_views_form</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1 class="mb-4">
                        <field name="name" />
                    </h1>
                    <group>
                        <group>
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" />
                                <field name="garden_orientation" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_views_search" model="ir.ui.view">
        <field name="name">estate_property_views_form_search</field>
        <field name="model">estate_property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />

                <filter string="可用的" name="available"
                    domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" />
                <group expand="1" string="Group By">
                    <filter string="郵政編碼" name="postcode"
                        context="{'group_by':'postcode', 'residual_visible':True}" />
                </group>
            </search>

        </field>
    </record>

    <record id="estate_test_model_action" model="ir.actions.act_window">
        <field name="name">房屋資訊</field>
        <field name="res_model">estate_property</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>